<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospitalhome">


   <ImageView
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/logo"
       android:src="@drawable/ksr_info_logo"
       />


    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textabout"
        android:layout_height="300dp"
        android:text="KSR Info aims to connect people together within their locality. All activities occuring in the particular locality can be updated in this app and all places such as orphanages, hospitals can be added. Emergency option in our app will be very helpful for people, which alerts the neighbouring people registered in our app and to the policemen."
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/logo"
        />


    <Button
        android:id="@+id/needhelp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/textabout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/button"
        android:padding="4dp"
        android:text="Need help? Contact us"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp">

    </Button>





</RelativeLayout>
