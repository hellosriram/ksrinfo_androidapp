<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospitalhome">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:lottie_url="https://assets9.lottiefiles.com/packages/lf20_3nWKI0EclH.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>
    <Button
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/button"
        android:padding="4dp"
        android:text="Whatsapp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp">

    </Button>



   <TextView
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:text="Having doubts? Need help? Mail us to goksrinfo@gmail.com! or contact us via Whatsapp!"
       android:textSize="20sp"
       android:gravity="center"
       android:padding="20dp"
       android:textColor="@color/black"
       android:layout_below="@id/whatsapp"/>

</RelativeLayout>
