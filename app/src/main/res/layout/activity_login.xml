<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textStyle="bold"
    tools:context=".login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ksr_info_logo">

            </ImageView>




            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/login_image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/forget"
                android:drawableStart="@drawable/email"
                android:backgroundTint="@color/white"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"
                android:textSize="16sp"
                android:textColor="#000000"
                android:drawablePadding="10dp"

                />



            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/login_email"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/forget"
                android:backgroundTint="@color/white"
                android:drawableStart="@drawable/password"
                android:hint="Enter Password ..."
                android:inputType="textPassword"
                android:padding="4dp">

            </EditText>


            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_password"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:padding="4dp"
                android:text="Forgot Password ?"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_password"

                android:layout_centerInParent="true"

                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/button"
                android:padding="4dp"
                android:text="LogIn"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="17dp"
                android:textStyle="bold">

            </Button>

            <TextView
                android:id="@+id/needanewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_btn"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:padding="4dp"
                android:text="Need a new Account ?"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/phone_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/needanewAccount"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:padding="4dp"

                android:text="Or"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>



            <Button
                android:id="@+id/phone_number_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_textView"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="CONTINUE WITH MOBILE"
                android:drawablePadding="20dp"

                android:background="@drawable/button"
                android:drawableStart="   @drawable/baseline_phone_android_24"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textSize="17dp"/>


            <Button
                android:id="@+id/googlelogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_number_login"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/button"
                android:drawableStart="@drawable/baseline_email_24"
                android:padding="4dp"
                android:textStyle="bold"
                android:text=" CONTINUE WITH GOOGLE"
                android:textAlignment="center"
                android:textAllCaps="false"

                android:textSize="17dp">

            </Button>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />


            </RelativeLayout>







        </RelativeLayout>


    </ScrollView>

</RelativeLayout>