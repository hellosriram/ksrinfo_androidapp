<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/ksr_info_logo"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:id="@+id/phone"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/baseline_phone_android_24"
        android:hint="Enter 10-digit phone number"
        android:background="@drawable/forget"
        android:drawablePadding="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Get OTP"
        android:id="@+id/generateOTP"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Enter OTP Received.."
        android:id="@+id/otpenter"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/baseline_message_24"
        android:background="@drawable/forget"
        android:drawablePadding="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/verifyOTP"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"/>


</LinearLayout>